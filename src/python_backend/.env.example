
# Flask配置
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-change-this-in-production

# 安全配置
API_KEY=your-api-key-change-this-in-production
DB_PATH=/var/lib/heat_exchanger/requests.db
LOG_LEVEL=INFO

# CORS配置 - 请修改为您的Cloudflare Pages域名
ALLOWED_ORIGINS=["https://your-domain.pages.dev", "http://localhost:3000", "https://localhost:3000"]

# 时间窗口配置 (秒)
TIME_WINDOW=300

# 请求频率限制
MAX_REQUESTS=10

# SSL证书配置
SSL_CERT_PATH=/etc/letsencrypt/live/106.14.94.111/cert.pem
SSL_KEY_PATH=/etc/letsencrypt/live/106.14.94.111/privkey.pem

# 邮件配置 (用于警报通知)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=admin@your-domain.com

# 备份配置
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/var/backups/heat_exchanger

# 监控配置
MONITOR_INTERVAL=300
ALERT_THRESHOLD_CPU=90
ALERT_THRESHOLD_MEMORY=90
ALERT_THRESHOLD_DISK=80
